<mvc:View controllerName="zemhr.xx.SAPUI5Training.controller.Master"                                                                                                                                                                                           
	xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">                                                                                                                                                                                                                    
	<Page title="{i18n>master.title}" showNavButton="true"                                                                                                                                                                                                        
		navButtonPress="onNavBack">                                                                                                                                                                                                                                  
		<content>                                                                                                                                                                                                                                                    
			<List id="masterList"                                                                                                                                                                                                                                       
				mode="{= !${device>/system/phone} ? 'SingleSelectMaster' : 'None' }"                                                                                                                                                                                       
				items="{employee>/results}"                                                                                                                                                                                                                                
				selectionChange="onNavDetail" itemPress="onNavDetail">                                                                                                                                                                                                     
				<items>                                                                                                                                                                                                                                                    
					<ObjectListItem title="{employee>Ename}"                                                                                                                                                                                                                  
						number="{employee>Pernr}" type="Navigation"                                                                                                                                                                                                              
						press="onNavDetail" detailPress="onNavDetail">                                                                                                                                                                                                           
						<attributes>                                                                                                                                                                                                                                             
							<ObjectAttribute text="{employee>Plans}" />                                                                                                                                                                                                             
						</attributes>                                                                                                                                                                                                                                            
						<firstStatus>                                                                                                                                                                                                                                            
							<ObjectStatus text="{employee>Bukrs}" state="Success" />                                                                                                                                                                                                
						</firstStatus>                                                                                                                                                                                                                                           
					</ObjectListItem>                                                                                                                                                                                                                                         
				</items>                                                                                                                                                                                                                                                   
			</List>                                                                                                                                                                                                                                                     
		</content>                                                                                                                                                                                                                                                   
	</Page>                                                                                                                                                                                                                                                       
</mvc:View>                                                                                                                                                                                                                                                    