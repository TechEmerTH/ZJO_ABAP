<mvc:View controllerName="zemhr.xx.SAPUI5Training.controller.Detail"                                                                                                                                                                                           
	xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">                                                                                                                                                                                                                    
	<Page title="{i18n>detail.title}" showNavButton="{device>/system/phone}"                                                                                                                                                                                      
		navButtonPress="onNavBack">                                                                                                                                                                                                                                  
		<content>                                                                                                                                                                                                                                                    
			<ObjectHeader title="{employee>Ename}" number="{employee>Pernr}"                                                                                                                                                                                            
				icon="sap-icon://employee">                                                                                                                                                                                                                                
				<attributes>                                                                                                                                                                                                                                               
					<ObjectAttribute text="{employee>Plans}" />                                                                                                                                                                                                               
				</attributes>                                                                                                                                                                                                                                              
				<firstStatus>                                                                                                                                                                                                                                              
					<ObjectStatus text="{employee>Bukrs}" state="Success" />                                                                                                                                                                                                  
				</firstStatus>                                                                                                                                                                                                                                             
			</ObjectHeader>                                                                                                                                                                                                                                             
		</content>                                                                                                                                                                                                                                                   
	</Page>                                                                                                                                                                                                                                                       
</mvc:View>                                                                                                                                                                                                                                                    